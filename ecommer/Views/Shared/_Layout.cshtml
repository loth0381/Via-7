<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Via 7 - Store</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" integrity="sha512-DU5LKogXlXHKPTj3e1lLDEpwDnagFJ9/PqIYjcHhykl8WQ7Z7CJQO0RyS10SZlD/UeCTJtWxMEevLGh8aDdf1Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Estilos personalizados */
        .navbar {
            max-width: 100%;
            padding: 13px 0;
            transition: background-color 0.3s ease, padding 0.3s ease;
        }

        .navbar-scrolled {
            background-color: #343a40;
            padding: 10px 0;
        }

        .textTamaño {
            font-size: 20px;
        }

        .navbar-brand {
            font-size: 36px;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #198754;
            }

        .nav-link {
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #198754;
            }

        .container {
            max-width: 100%;
        }

        .content {
            min-height: calc(100vh - 160px);
            padding: 20px;
            transition: padding 0.3s ease;
        }

        .content-scrolled {
            padding: 10px 20px;
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 30px 0;
        }

            .footer h5 {
                color: #fff;
                margin-bottom: 30px;
            }

        .btn-social {
            width: 50px;
            height: 50px;
            font-size: 20px;
            margin: 0 10px;
            padding: 0;
            border-radius: 50%;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-social i {
                line-height: 50px;
            }

            .btn-social:hover {
                background-color: #555;
            }

                .btn-social:hover i {
                    color: #fff;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Via 7</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active textTamaño" href="/Home/Index">
                            Inicio
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active textTamaño" href="/Home/Ayuda">
                            Ayuda
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link textTamaño" href="/Home/Privacy"></a>
                    </li>
                </ul>
                <h5><partial name="_LoginPartial" /></h5>
            </div>
        </div>
    </nav>
    <div class="container content">
        @RenderBody()
    </div>

    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h5 class="text-uppercase mb-4">Síguenos en redes sociales</h5>
                    <!-- Agrega aquí tus enlaces y nombres de redes sociales -->
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="bi bi-facebook"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="bi bi-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="bi bi-linkedin"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="bi bi-instagram"></i></a>
                </div>
                <div class="col-lg-6">
                    <h5 class="text-uppercase mb-4">Contáctanos</h5>
                    <p class="lead mb-0">
                        ejemplo@gmail.com
                    </p>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script>
        loadCartCount();

        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/GetTotalItemInCart`);
                if (response.status === 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            } catch (err) {
                console.log(err);
            }
        }

        window.addEventListener('scroll', function () {
            var navbar = document.querySelector('.navbar');
            var content = document.querySelector('.content');
            navbar.classList.toggle('navbar-scrolled', window.scrollY > 0);
            content.classList.toggle('content-scrolled', window.scrollY > 0);
        });
    </script>
</body>
</html>